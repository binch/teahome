<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:paddingBottom="7dip">   
        
    <ImageView 
        android:id="@+id/shop_promotion_listitem_pic"
	    android:layout_width="110.0dip" 
	    android:layout_height="80.0dip"
	    android:layout_marginRight="2dip"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/image_loading"/>

  <RelativeLayout 
    	android:orientation="horizontal" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shop_promotion_listitem_pic"
        android:layout_marginTop="8dip">   
       	
        <TextView android:id="@+id/shop_promotion_listitem_title" 
	        android:layout_width="fill_parent" 
	     	android:layout_height="wrap_content"
	     	android:textStyle="bold"
	     	android:textSize="@dimen/text_size_15"
	     	android:textColor="@color/listitem_black"
	     	android:singleLine="true"/> 
	     	
       	<TextView android:id="@+id/shop_promotion_listitem_summary"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content" 
           	android:layout_below="@id/shop_promotion_listitem_title"
           	android:textSize="@dimen/text_size_10"
            android:textColor="@color/listitem_gray"/>
       
    </RelativeLayout>

</RelativeLayout> 
