<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	android:orientation="vertical" 
   	android:layout_width="fill_parent" 
   	android:layout_height="fill_parent">
   	<LinearLayout 
		android:layout_width="fill_parent" 
   		android:layout_height="35.0dip" 
   		android:orientation="horizontal" 
   		android:gravity="center_vertical">
       	<Button 
	        android:id="@+id/frame_btn_shop_promotion"
			style="@style/frame_button"
         	android:text="@string/frame_title_shop_promot"/>
       	<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline"/>
		<Button 
			android:id="@+id/frame_btn_shop_shop"
			style="@style/frame_button"
         	android:text="@string/frame_title_shop_shop"/>
		<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline"/>
		<Button 
			android:id="@+id/frame_btn_shop_item"
			style="@style/frame_button"
         	android:text="@string/frame_title_shop_item"/>
		<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline"/>
		<Button 
			android:id="@+id/frame_btn_shop_comment"
			style="@style/frame_button"
         	android:text="@string/frame_title_shop_comment"/>
		
	</LinearLayout>
	
	<com.haorenao.app.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_shop_promotion"
	    style="@style/widget_listview"/>
	
	<com.haorenao.app.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_shop_shop"
	    style="@style/widget_listview"
	    android:divider="@null"
		android:visibility="gone"/>
	<com.haorenao.app.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_shop_item"
	    style="@style/widget_listview"
	    android:divider="@null"
		android:visibility="gone"/>
	<com.haorenao.app.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_shop_comment"
	    style="@style/widget_listview"
	    android:divider="@null"
		android:visibility="gone"/>
</LinearLayout>